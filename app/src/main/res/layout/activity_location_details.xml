<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pexels2"
    android:orientation="vertical"
    tools:context=".LocationDetailsActivity">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="Aktualna pozycja:"
            android:textColor="	#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tPositionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="	#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tLongitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="	#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tLatitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="	#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="	#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tFollowTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text=" Wybierz czas Å›ledzenia pojazdu"
            android:textColor="	#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 min" />

            <Button
                android:id="@+id/b10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 min" />

            <Button
                android:id="@+id/b30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 min" />

            <Button
                android:id="@+id/b60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60 min" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/mapFragment"
                class="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/bMapFull"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:background="@drawable/circle"
                android:drawableTop="@android:drawable/ic_dialog_map"
                android:paddingTop="20dp"
                android:textAllCaps="false"
                android:text="Google Map"
                android:textSize="10dp"
                android:textColor="#000000" />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>